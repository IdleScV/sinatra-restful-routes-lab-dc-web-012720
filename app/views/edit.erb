<h2>Edit <%=@recipe.name%> Recipe</h2>
<br>
<form method="POST" action="/recipes/<%=@recipe.id%>" method="POST">
    <input type="hidden" name="_method" value="PATCH">
    <input type="hidden" name="id" value="<%=@recipe.id%>">
    <p>Name: <input type="text" name="name" value="<%=@recipe.name%>"></p>
    <p>Ingredients: <input type="text" name="ingredients" value="<%=@recipe.ingredients%>"></p>
    <p>Cooktime: <input type="text" name="cook_time" value="<%=@recipe.cook_time%>"></p>

    <input type="submit" value="Make Edit!">

</form>